<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">
    <ImageView 
        android:layout_marginLeft="5dp"
        android:id="@+id/search_list_item_icon"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerInside"/>
    <TextView 
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/search_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/search_list_item_icon"/>
	<TextView
        android:layout_marginBottom="10dp"
	    android:layout_alignParentBottom="true"
	    android:layout_marginLeft="5dp"
	    android:id="@+id/search_list_item_size"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/login_bg"
	    android:layout_below="@+id/search_list_item_name"
	    android:textSize="@dimen/serach_list_item_size"
	    android:layout_toRightOf="@+id/search_list_item_icon"/>
	<TextView
	    android:layout_marginBottom="10dp"  
	    android:layout_alignParentBottom="true"
	    android:layout_marginLeft="20dp"
	    android:id="@+id/search_list_item_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/login_bg"
	    android:layout_below="@+id/search_list_item_name"
	    android:textSize="@dimen/serach_list_item_size"
	    android:layout_toRightOf="@+id/search_list_item_size"/>
</RelativeLayout>
